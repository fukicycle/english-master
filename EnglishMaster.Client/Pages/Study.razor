@page "/study"
@inherits PageBase
@inject IHttpClientService HttpClientService

<PageTitle>Study</PageTitle>
<div class="study-area">
    <div class="selection-area">
        <div class="selection-item">
            <div>Category</div>
            <select>
                <option value="0">select a option</option>
                @foreach (LevelResponseDto level in _levles)
                {
                    <option value="@level.Id">@level.Name</option>
                }
            </select>
        </div>
        <div class="selection-item">
            <div>Part of speech</div>
            <select>
                <option value="0">select a option</option>
            </select>
        </div>
    </div>
    <div class="question-card-wrapper">
        <div class="question-card">
            <div class="card-header">
                <div class="no">No.1</div>
                <div class="count">1/50</div>
            </div>
            <div class="word">Word</div>
        </div>
    </div>
    <div class="answer-option-area">
        <button class="option-btn">単語</button>
        <button class="option-btn">ほげ</button>
        <button class="option-btn">ふが</button>
        <button class="option-btn">ぴよぴよ</button>
    </div>
</div>